{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova Postagem:</h4>
        <form action="/admin/posts/nova" method="post">
            <label for="">Título: </label>
            <input class="form-control" type="text" name="titulo" placeholder="Título da postagem" required>
            <label for="">Slug: </label>
            <input class="form-control" type="text" name="slug" placeholder="Slug da postagem" required>
            <label for="">Descrição: </label>
            <input class="form-control" type="text" name="descricao" placeholder="Descrição da postagem" required>
            <label for="">Conteúdo: </label>
            <textarea class="form-control" name="conteudo" cols="30" rows="6" placeholder="Conteúdo da postagem" required></textarea>
            <label for="">Categoria: </label>
            <select class="custom-select" name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Não há categorias registradas</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Postar</button>
        </form>
    </div>
</div>